<Window x:Class="Torpedo.Windows.GameScoresDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Torpedo"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Leaderboard" Height="550" Width="600">
    <Grid>
        <DataGrid Name="scoreGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Player 1" IsReadOnly="True" Binding="{Binding Player1Name}" Width="3*"/>
                <DataGridTextColumn Header="Player 2" IsReadOnly="True" Binding="{Binding Player2Name}" Width="3*"/>
                <DataGridTextColumn Header="Rounds" IsReadOnly="True" Binding="{Binding Rounds}" Width="3*"/>
                <DataGridTextColumn Header="Player 1 Hits" IsReadOnly="True" Binding="{Binding Player1Hits}" Width="3*"/>
                <DataGridTextColumn Header="Player 2 Hits" IsReadOnly="True" Binding="{Binding Player2Hits}" Width="3*"/>
                <DataGridTextColumn Header="Winner" IsReadOnly="True" Binding="{Binding Winner}" Width="3*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
